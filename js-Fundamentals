// LECTURE: Logical Operators.

let countryLanguage = prompt(' please inter your country language ');
let countryPopulation = prompt(' please inter your country population ');
let countryType = prompt(' please inter your country type ');

if ( countryLanguage = 'English'  && countryPopulation < 50000000  &&  countryType != 'island' ) {
    console.log('you should live in purtagol')
}

else {
    console.log(' purtagol does not meet your criteria ')
}




